{
  "authors": [
    {
      "name": "Robert Landers",
      "email": "landers.robert@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Bottledcode\\DurablePhp\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bottledcode\\DurablePhp\\Tests\\": "tests/"
    }
  },
  "license": "MIT",
  "name": "bottledcode/durable-php",
  "require": {
    "amphp/file": "^3.0",
    "amphp/log": "v2.0.0-beta.2",
    "amphp/parallel": "^v2",
    "bottledcode/php-rql": "dev-master",
    "crell/serde": "^0.6.0",
    "ext-apcu": "*",
    "ext-posix": "*",
    "ext-ev": "*",
    "nesbot/carbon": "^2.66",
    "php": ">=8.2",
    "ramsey/uuid": "^4.7.4",
    "withinboredom/time": "^2.1"
  },
  "replace": {
    "symfony/polyfill-php80": "*",
    "symfony/polyfill-mbstring": "*"
  },
  "suggest": {
    "ext-redis": "Required for Redis Streams",
    "ext-igbinary": "Use a better serializer"
  },
  "type": "library",
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "repositories": [
    {
      "type": "github",
      "url": "https://github.com/withinboredom/byte-stream"
    }
  ]
}
